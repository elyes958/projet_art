{% extends 'admin/base.html.twig' %}

{% block admin_body %}
    <h4 class="text-center">Liste des oeuvres</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.id }}</td>
                <td>{{ oeuvre.nom }}</td>
                <td>{{ oeuvre.categorie.nom }}</td>
                <td>{{ oeuvre.prix }} €</td>
                <td>
                    <a href="{{ path('oeuvre_show', {'id': oeuvre.id}) }}">Consulter</a>
                    <a href="{{ path('oeuvre_edit', {'id': oeuvre.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun oeuvre disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('oeuvre_new') }}">Ajouter un oeuvre</a>
{% endblock %}
